<div class="page-container">
  <div class="theme-title">
    投票テーマ作成フォーム
  </div>
  <!-- <form class="theme-create-form"> -->
    <%= form_with model: @theme, class:"theme-create-form", local: true do |form| %>
   <!--  <label for="theme-create-form__input-theme-name">投票テーマ入力</label> -->
    <%= form.label "theme-create-form__input-theme-name", "投票テーマ入力" %>
    <!-- <input type="text" name="" class="theme-create-form__input-theme-name" placeholder="例：犬派か猫派かあなたはどっち？"> -->
    <%= form.text_field :name, class: "theme-create-form__input-theme-name" %>

    <div class="input-group-boards">
      <div class="input-group-board">
        <!-- <label>回答1</label><br> -->
        <%= form.label "theme-create-form__input-group-name", "回答1" %><br>
        <!-- <input type="text" name="" class="theme-create-form__input-group-name" placeholder="例：犬派"><br> -->
        <%= form.text_field :group_name, class: "theme-create-form__input-group-name", placeholder: "例：犬派" %><br>
        <!-- <label>メッセージ</label><br> -->
        <%= form.label "theme-create-form__input-group-message", "メッセージ" %>
        <!-- <textarea class="theme-create-form__input-grpup-message" placeholder="めっせーじ"></textarea><br> -->
        <%= form.text_area :group_message, class: "theme-create-form__input-grpup-message", placeholder: "例：かわいい" %><br>
        <label>画像</label><br>
        <input type="file">
      </div>
      <div class="input-group-board"></div>
    </div>
    <label>
      <div class="theme-create-form__submit"><span>作成！</span></div>
      <%= form.submit style: "display: none" %>
    </label>
  <!-- </form> -->
  <% end %>
</div>
